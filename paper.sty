\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{paper}[2018/04/21 v0.01 paper package]

\RequirePackage[margin=.75in]{geometry}
\RequirePackage{titlesec}
\RequirePackage{multicol}

\titlespacing*{\section}{0pt}{\parskip}{-\parskip}
\titlespacing*{\subsection}{0pt}{\parskip}{-\parskip}
\titlespacing*{\subsubsection}{0pt}{\parskip}{-\parskip}

\setlength\columnsep{20pt}
\renewcommand{\baselinestretch}{.85}
\setlength\parindent{8pt}

\titleformat{\section}
  {\normalfont\large\scshape\filcenter}{\thesection.}{.5em}{}
\titleformat{\subsection}
  {\normalfont\scshape\filcenter}{\thesubsection.}{.5em}{}
\titleformat{\subsubsection}
  {\normalfont\scshape\filcenter}{\thesubsubsection.}{.5em}{}
